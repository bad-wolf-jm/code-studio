<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:ToolKit.UI.Controls">
  <Design.PreviewWith>
    <controls:MaterialIcon Kind="EyeOutline" VerticalAlignment="Center" HorizontalAlignment="Center" Width="15" Height="15" Foreground="White"/>
  </Design.PreviewWith>

  <Style Selector="ToggleButton.VisibilityToggle:checked">
    <Setter Property="Template">
      <ControlTemplate>
        <controls:MaterialIcon Kind="EyeOutline" VerticalAlignment="Center" HorizontalAlignment="Center"  Foreground="LightGray"/>
      </ControlTemplate>
    </Setter>
  </Style>

  <Style Selector="ToggleButton.VisibilityToggle:unchecked">
    <Setter Property="Template">
      <ControlTemplate>
        <controls:MaterialIcon Kind="EyeOffOutline" VerticalAlignment="Center" HorizontalAlignment="Center"  Foreground="LightGray"/>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
