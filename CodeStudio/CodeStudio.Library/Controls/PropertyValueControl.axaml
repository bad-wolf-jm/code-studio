<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Metrino.Development.Studio.Library.Controls">
  <Design.PreviewWith>
    <controls:PropertyValueControl />
  </Design.PreviewWith>

  <Style Selector="controls|PropertyValueControl">
    <!-- Set Defaults -->
    <Setter Property="Margin" Value="0,2"/>
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="Template">
      <ControlTemplate>
        <Grid Margin="{TemplateBinding Margin}" ColumnDefinitions="*,*">
          <TextBlock Grid.Column="0"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Text="{TemplateBinding PropertyName}" />
          <TextBlock Grid.Column="1"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Right"
                     Text="{TemplateBinding PropertyValue}" />
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
