<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Metrino.Development.Studio.Library.Controls">
  <Design.PreviewWith>
    <controls:NumberWithUnit />
  </Design.PreviewWith>

  <Style Selector="controls|NumberWithUnit">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="{TemplateBinding HorizontalAlignment}">
          <TextBlock Text="{TemplateBinding Value}" />
          <TextBlock Text="{TemplateBinding Unit}" Margin="-3,0,0,0" Padding="0" Foreground="SlateGray" />
        </StackPanel>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
